{
    "id": "org.gnome.Snapshot",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "snapshot",
    "finish-args": [
        "--device=dri",
        "--filesystem=xdg-pictures/Camera:create",
        "--filesystem=xdg-videos/Camera:create",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/installed-tests",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "snapshot",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/snapshot/49/snapshot-49.0.tar.xz",
                    "sha256": "5f96193d2919c7355745d26a1b01f23c3cb30a93c742d583ec42927c4a45ae18",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "snapshot"
                    }
                },
                {
                    "type": "patch",
                    "path": "patches/0001-metainfo-Fix-typo-in-release.patch"
                }
            ]
        }
    ]
}
