{
    "id": "org.gnome.Snapshot",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm18"
    ],
    "command": "snapshot",
    "finish-args": [
        "--device=dri",
        "--filesystem=xdg-pictures/Camera:create",
        "--filesystem=xdg-videos/Camera:create",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm18/bin"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/installed-tests",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "glycin-loaders",
            "buildsystem": "meson",
            "config-opts": [
                "-Dlibglycin=false",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glycin/1.1/glycin-1.1.1.tar.xz",
                    "sha256": "560ee42167c1ed22826618e61d83e49140db5bf47a65a9ba8ece2cd73d2a4aa8",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "glycin"
                    }
                }
            ]
        },
        {
            "name": "snapshot",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/snapshot/47/snapshot-47.1.tar.xz",
                    "sha256": "e4b162679af24c7e96ee6e22b47d5ff0da96e0a0f616d13aeb1207c609f89483",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "snapshot"
                    }
                }
            ]
        }
    ]
}
